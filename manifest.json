{
  "manifest_version": 2,
  "name": "Colour Changer",
  "version": "1.0.0",
  "description": "An extension to change the font colours on web pages for customisability",
  "browser_action":{
    "default_popup": "colour-picker.html"
  },
  "permissions":["activeTab", "<all_urls>"],
  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":["content.js"]

    }
  ],
  "icons": {
    "16": "images/get_started16.png",
    "48": "images/get_started48.png"
  }


}